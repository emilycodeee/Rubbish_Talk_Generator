<div class="container d-flex flex-column justify-content-center align-items-center  ">
  <h1 class="text-center my-3 ">你想對誰說幹話？</h1>
  {{!-- form --}}

  <form method="POST" action="/">

    <div class="row  mb-3 justify-content-center">
      {{#each defauldata}}
      <div class="card col-sm-3 ms-1 shadow p-3 mb-5 bg-white rounded">
        <img src="{{this.avatar}}" class="card-img-top my-1 " style="width: 100%; height:80%; " alt="{{this.title}}">
        <div class="card-body text-center">
          <input class="form-check-input " type="radio" name="career" value="{{this.career}}">
          {{this.title}}
        </div>
      </div>
      {{/each}}

      {{!-- text box --}}

      <div class="row  d-flex justify-content-center">
        <div class="col-sm-2 align-self-center d-flex justify-content-center ">
          <button class="btn btn-dark  " style="font-size:20px;" type="submit">幹話開講</button>
        </div>

        <textarea placeholder="想不到要說什麼？讓我來幫你..." readonly class="col-sm-10  rounded"
          style="height: 100px; width:60%;font-size:28px;">{{#if rubbishtalk}}{{rubbishtalk}}{{/if}}</textarea>

      </div>

  </form>

</div>